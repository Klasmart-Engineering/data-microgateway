{
  "$schema": "https://www.krakend.io/schema/v3.json",
  "version": 3,
  "extra_config": {
    "telemetry/logging": {
      "level": "INFO",
      "prefix": "[KRAKEND]",
      "syslog": false,
      "stdout": true,
      "format": "logstash"
    },
    "github_com/devopsfaith/krakend-metrics": {
      "collection_time": "60s",
      "proxy_disabled": false,
      "router_disabled": false,
      "backend_disabled": false,
      "endpoint_disabled": false,
      "listen_address": ":8090"
    },
    "router": {
      "logger_skip_paths": [
        "/__health",
        "/__stats"
      ],
      "disable_access_log": true
    }
  },
  "plugin": {
    "pattern": ".so",
    "folder": "/opt/krakend/plugins/"
  },
  "timeout": "3000ms",
  "cache_ttl": "300s",
  "output_encoding": "json",
  "name": "data-microgateway",
  "port": 8080,
  "endpoints": [
    {
      "endpoint": "/adaptive-review/{requestId}",
      "method": "GET",
      "output_encoding": "json",
      "backend": [
        {
          "url_pattern": "/",
          "host": ["api.kidsloop.live"],
          "encoding": "json",
          "extra_config" : {
            "backend/lambda": {
              "function_name":  {{ marshal .lambda.adaptive_review }},
              "region": "{{ env "AWS_REGION" }}",
              "max_retries": 2
            }
          }
        }
      ],
      "extra_config": {
        {{ template "jwks-validation-plugin.tmpl" .auth }}
      }
    },
    {
      "endpoint": "/adaptive-grouping/{requestId}",
      "method": "GET",
      "output_encoding": "json",
      "backend": [
        {
          "url_pattern": "/",
          "host": ["api.kidsloop.live"],
          "encoding": "json",
          "extra_config" : {
            "backend/lambda": {
              "function_name":  {{ marshal .lambda.adaptive_grouping }},
              "region": "{{ env "AWS_REGION" }}",
              "max_retries": 2
            }
          }
        }
      ],
      "extra_config": {
        {{ template "jwks-validation-plugin.tmpl" .auth }}
      }
    }
  ]
}
